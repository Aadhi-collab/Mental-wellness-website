# ============================================
# Neon Database Configuration for Netlify
# ============================================
# For Neon PostgreSQL Database
# Copy values from your Neon dashboard and set in Netlify

# ============================================
# Neon Connection Settings
# ============================================

# Neon project connection string (contains all connection info)
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxxxx.us-east-1.neon.tech/neondb?sslmode=require

# Neon host (just the hostname)
NEON_HOST=ep-xxxxx.us-east-1.neon.tech

# Neon database port (always 5432 for PostgreSQL)
NEON_PORT=5432

# Neon database name
NEON_DATABASE=neondb

# Database user
NEON_USER=neondb_owner

# Database password (IMPORTANT: Store securely in Netlify environment)
NEON_PASSWORD=your_secure_password_here

# ============================================
# Application Settings
# ============================================

# Environment type
NODE_ENV=production

# Deployment environment
DEPLOYMENT_ENV=netlify

# API endpoint (if using a backend service)
# VITE_API_URL=https://your-api.netlify.app/api

# ============================================
# Feature Flags for Neon Integration
# ============================================

# Use Neon database instead of localStorage
USE_NEON_DATABASE=true

# Enable cloud sync (sync localStorage to Neon)
ENABLE_CLOUD_SYNC=true

# Fallback to localStorage if API fails
FALLBACK_TO_LOCALSTORAGE=true

# ============================================
# Security Settings
# ============================================

# Enable HTTPS (required for production)
REQUIRE_HTTPS=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-netlify-domain.netlify.app

# Session token secret (generate a strong random value)
SESSION_SECRET=your_random_session_secret_here

# ============================================
# Optional: API Configuration
# ============================================

# If you're setting up a backend API
API_ENDPOINT=https://your-api-endpoint.com
API_KEY=your_api_key_here

# ============================================
# Logging & Monitoring
# ============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable database query logging in development
DEBUG_QUERIES=false

# ============================================
# IMPORTANT NOTES
# ============================================
# 1. Get DATABASE_URL from Neon Dashboard:
#    - Go to https://console.neon.tech
#    - Select your project
#    - Click "Connection string" or "Pooling Connection"
#    - Copy the full connection string starting with "postgresql://"
#
# 2. Set these in Netlify:
#    - Go to Site Settings → Build & Deploy → Environment
#    - Add each variable from this file
#    - DO NOT include DATABASE_URL in your code - only use env variables
#
# 3. Never commit actual values to git:
#    - .env, .env.local, and .env.*.local are in .gitignore
#    - This file is for reference only
#
# 4. For local development:
#    - Copy this file to .env.local
#    - Replace values with your actual Neon credentials
#    - Local .env.local will not be committed to git
