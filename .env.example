# ============================================
# Environment Configuration Example
# ============================================
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env file with actual values
# This file is for reference only - DO NOT store sensitive data

# ============================================
# Application Settings
# ============================================

# Application environment (development, staging, production)
NODE_ENV=development

# Application debug mode - set to false in production
DEBUG=true

# Application version
APP_VERSION=1.0.0

# ============================================
# Data Storage Configuration
# ============================================

# LocalStorage prefix for wellness tracker data
STORAGE_KEY=wellnessTrackerData

# Data retention period in days (0 = keep indefinitely)
DATA_RETENTION_DAYS=0

# ============================================
# Feature Flags
# ============================================

# Enable/disable different features
ENABLE_DATA_EXPORT=true
ENABLE_PDF_EXPORT=true
ENABLE_DARK_MODE=true

# ============================================
# Analytics Settings (for future use)
# ============================================

# Google Analytics tracking ID (if implemented)
GOOGLE_ANALYTICS_ID=

# Sentry error tracking (if implemented)
SENTRY_DSN=

# ============================================
# API Configuration (for future backend)
# ============================================

# API server URL
API_BASE_URL=http://localhost:3000/api

# API timeout in milliseconds
API_TIMEOUT=5000

# ============================================
# Security Settings
# ============================================

# CRITICAL: User Data Encryption Key (generate a strong key for production)
# For client-side apps, this should be managed securely
ENCRYPTION_ENABLED=true

# Password hashing algorithm: 'pbkdf2', 'argon2', or 'scrypt'
# Note: Client-side hashing is limited; backend solution recommended for production
PASSWORD_HASH_ALGORITHM=pbkdf2

# Enable session timeout (minutes) - 0 means no timeout
SESSION_TIMEOUT=0

# Require HTTPS for production deployment
REQUIRE_HTTPS=true

# Content Security Policy enabled
CSP_ENABLED=true

# Maximum journal entry length (characters)
MAX_JOURNAL_LENGTH=500

# Maximum CSV file size for export (bytes)
MAX_EXPORT_SIZE=1048576

# Enable data backup prompt
ENABLE_BACKUP_REMINDER=true

# Backup reminder frequency (days)
BACKUP_REMINDER_DAYS=30

# ============================================
# Email Configuration (for future use)
# ============================================

# Email service API key (if notifications are added)
EMAIL_API_KEY=

# Email notification enabled
EMAIL_NOTIFICATIONS=false

# ============================================
# Third-party Services (future integrations)
# ============================================

# Mental health resources API endpoint
MENTAL_HEALTH_API=

# Crisis hotline database
CRISIS_HOTLINE_DB=

# ============================================
# Development Settings
# ============================================

# Log level: error, warn, info, debug
LOG_LEVEL=debug

# Enable local server
LOCAL_SERVER=true

# Local server port
LOCAL_SERVER_PORT=8000

# ============================================
# Notes
# ============================================
# - All values in this file are examples
# - Never commit real credentials or API keys
# - Use .gitignore to protect .env file
# - Create separate .env files for different environments
# - Document all sensitive configuration in your team
